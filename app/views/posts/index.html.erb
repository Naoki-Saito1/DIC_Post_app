
<div class="image">
　<%= image_tag 'banner02.png', width:'100%', height: '500px' %>
</div>
　<%= stylesheet_link_tag "application", :media => "all" %>
<p><%= notice %></p>
<h1 >投稿一覧</h1>
<div class="container">
<table>
<tr>
<th>内容</th>
</tr>
　<% @posts.each do |post| %>
<tr>
<td><%= post.content %></td>
　<td><%= link_to '詳細を確認する', post_path(post.id) %></td>
　<td><%= link_to "投稿を編集する", edit_post_path(post.id) %></td>
　<td><%= link_to '投稿を削除する', post_path(post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
</tr>
<% end %>
</table>
</div>
<div class="new_post">
　<%= link_to '新しく投稿をする', new_post_path %>
</div>
